@model RollSystemMobile.Models.Class
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ClassID)
    @Html.ValidationSummary(true)
    <table class="table">
        <tr>
            <td style="width: 350px;">
                <div class="editor-label">
                    <b>Major</b>
                </div>
                <div class="editor-field">
                    @Html.DropDownList("MajorID")
                    @Html.ValidationMessageFor(model => model.MajorID)
                </div>
                <span class="help-block">Select major of class.</span>
            </td>
            <td>
                <div class="editor-label">
                    <b>Class Name </b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.ClassName, new { style = "width:150px;" })
                    @Html.ValidationMessageFor(model => model.ClassName)
                </div>
                <span class="help-block">Name of class.</span>
            </td>
        </tr>
    </table>
    <p>
        <input class="btn btn-primary" type="submit" value="Save" />
    </p>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
