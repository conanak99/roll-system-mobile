@model RollSystemMobile.Models.RollCall
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h2>
    Create New Roll Call</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="table">
        <tr>
            <td style="width: 350px;">
                <div class="editor-label">
                    <b>Major :</b>
                </div>
                <div class="editor-field " style="margin-left: 10px">
                    @Html.DropDownList("MajorID", (SelectList)ViewBag.MajorID, new { style = "width: 230px;" })
                </div>
                <div class="editor-label">
                    <b>Subject</b>
                </div>
                <div class="editor-field" style="margin-left: 10px;">
                    @Html.DropDownList("SubjectID", (SelectList)ViewBag.SubjectID, new { style = "width: 100px;" })
                </div>
                <div class="editor-label">
                    <b>Class</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    @Html.DropDownList("ClassID", (SelectList)ViewBag.ClassID, new { style = "width: 130px;" })<br />
                    <a id="classList" target="_blank" href="">Click to view student in this class</a>
                </div>
                <div class="editor-label">
                    <b>Instructor</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    @Html.DropDownList("InstructorID", (SelectList)ViewBag.MajoInstructorrID, new { style = "width: 230px;" })
                </div>
            </td>
            <td>
                <div class="editor-label">
                    <b>Semester</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    @Html.DropDownList("SemesterID", (SelectList)ViewBag.SemeseterID, new { style = "width: 160px;" })
                    @Html.ValidationMessageFor(model => model.SemesterID)
                </div>
                <div class="editor-label">
                    <b>Start time</b>
                </div>
                <div class="editor-field" id="a" style="margin-left: 10px">
                    @Html.DropDownList("StartTime", new List<SelectListItem> 
       { 
           new SelectListItem { Text = "7:00", Value = "7:00" }, 
           new SelectListItem { Text = "8:45", Value = "8:45" },
           new SelectListItem { Text = "10:30", Value = "10:30" }, 
           new SelectListItem { Text = "12:30", Value = "12:30" }, 
           new SelectListItem { Text = "14:15", Value = "14:15" }, 
           new SelectListItem { Text = "16:00", Value = "16:00" } 
       }, new { @id = "2" })
                    <div id="1">@Html.EditorFor(model => model.StartTime)</div>
                    @Html.ValidationMessageFor(model => model.StartTime)
                </div>
                <div class="editor-label">
                    <b>Begin Date</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    <div class="input-append date" id="begindate" data-date-format="mm-dd-yyyy">
                        <input class="span2" name="BeginDate" style="width: 100px; margin-left: 10px;" size="16" type="text"
                    value="@DateTime.Today.ToString("MM-dd-yyyy")" readonly><span class="add-on"><i class="icon-th"></i></span>
                    </div>
                </div>
                <div class="editor-label">
                    <b>End Date</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    <div class="input-append date" id="enddate" data-date-format="mm-dd-yyyy">
                        <input class="span2" name="EndDate" style="width: 100px; margin-left: 10px;" size="16" type="text"
                    value="@DateTime.Today.ToString("MM-dd-yyyy")" readonly><span class="add-on"><i class="icon-th"></i></span>
                    </div>
                </div>
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Create" class="btn btn-primary" />
    </p>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#2").width(100);
        //create datepicker
        $("#begindate").datepicker();
        $("#enddate").datepicker();
        //
        var value = $('#SubjectID :selected').text();
        if (value == "XML") {
            $("#2").hide();
            document.getElementById("1").style.display = "block";
        } else {
            $("#2").show();
            document.getElementById("1").style.display = "none";
        }
    });
    //set selected start time on reload page
    $('#StartTime').change(function () {
        var value = $('#StartTime :selected').index();
        localStorage.a = value;
    });
    window.onload = function () {
        document.getElementById('StartTime').selectedIndex = localStorage.a;
    };


    var time1 = $('#1').clone();
    var time2 = $('#2').clone();
    //change startime to text if subject is capnstone
    $('#SubjectID').change(function () {
        var value = $('#SubjectID :selected').text();
        $('#1').remove();
        $('#2').remove();
        if (value == "XML") {
            $('#a').append(time1);
            //  $("#2").hide();
            //  document.getElementById("1").style.display = "block";
        } else {
            $('#a').append(time2);
            //  $("#2").show();
            //  document.getElementById("1").style.display = "none";
        }
    });


    //dom not only ready, but everything is loaded
    function ViewStudentList() {
        var classID = $('#ClassID :selected').attr("value");
        window.location.href = "Studentlist?ClassID=" + classID;
    }

    $('#ClassID').change(function () {
        var classID = $('#ClassID :selected').attr("value");
        $('#classList').attr('href',"Studentlist?ClassID=" + classID);
    });

    $('#MajorID').change(function () {
        var majorID = $('#MajorID :selected').attr("value");

        var subjectUrl = '@Url.Action("GetSubjects")/' + majorID;
        var classUrl = '@Url.Action("GetClasses")/' + majorID;

        $.getJSON(subjectUrl, function (subjects) {
            var html = "";
            $.each(subjects, function (index, subject) {
                html += ('<option value="' + subject.id + '" >' + subject.name + '</option>');
            });
            $("#SubjectID").html(html);
        });

        $.getJSON(classUrl, function (classes) {
            var html = "";
            $.each(classes, function (index, item_class) {
                html += ('<option value="' + item_class.id + '" >' + item_class.name + '</option>');
            });
            $("#ClassID").html(html);
        });
    });   
</script>
