@model RollSystemMobile.Models.RollCall
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h2>
    Edit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="table">
        <tr>
            <td style="width: 350px;">
                <div class="editor-label">
                    <b>Major :</b>
                </div>
                <div class="editor-field " style="margin-left: 10px">
                    @Html.DropDownList("MajorID")
                </div>
                <span class="help-block">Select the major of roll call.</span>
                <div class="editor-label">
                    <b>Subject</b>
                </div>
                <div class="editor-field" style="margin-left: 10px;">
                      @Html.DropDownList("SubjectID")
                </div>
                <span class="help-block">Select the subject of roll call.</span>
                <div class="editor-label">
                    <b>Class</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                      @Html.DropDownList("ClassID")
                </div>
                <span class="help-block">Select the class of roll call.</span>
                <div class="editor-label">
                    <b>Instructor</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                      @Html.DropDownList("InstructorID")
                </div>
                <span class="help-block">Select the instructor of roll call.</span>
            </td>
            <td>
                <div class="editor-label">
                    <b>Semester</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    @Html.DropDownList("SemesterID")
                    @Html.ValidationMessageFor(model => model.SemesterID)
                </div>
                <span class="help-block">Select the semester of roll call.</span>
                <div class="editor-label">
                    <b>Start time</b>
                </div>
                <div class="editor-field" id="a" style="margin-left: 10px">
                    <div id="1">@Html.TextBoxFor(model => model.StartTime, new { style = "width:80px;" })</div>
                    @Html.ValidationMessageFor(model => model.StartTime)
                </div>
                <span class="help-block">Select the start time of roll call.</span>
                <div class="editor-label">
                    <b>Begin Date</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    <div class="input-append date" id="begindate" data-date-format="mm-dd-yyyy">
                        <input class="span2" name="BeginDate" style="width: 100px; margin-left: 10px;" size="16" type="text"
                    value="@DateTime.Today.ToString("MM-dd-yyyy")" readonly><span class="add-on"><i class="icon-th"></i></span>
                    </div>
                </div>
                <span class="help-block">Select the begin date of roll call.</span>
                <div class="editor-label">
                    <b>End Date</b>
                </div>
                <div class="editor-field" style="margin-left: 10px">
                    <div class="input-append date" id="enddate" data-date-format="mm-dd-yyyy">
                        <input class="span2" name="EndDate" style="width: 100px; margin-left: 10px;" size="16" type="text"
                    value="@DateTime.Today.ToString("MM-dd-yyyy")" readonly><span class="add-on"><i class="icon-th"></i></span>
                    </div>
                </div>
                <span class="help-block">Select the end date of roll call.</span>
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Save" class="btn btn-primary" />
    </p>
    
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    $(document).ready(function () {
        $("#2").width(100);
        //create datepicker
        $("#begindate").datepicker();
        $("#enddate").datepicker();
        //
        //
    });

    $('#MajorID').change(function () {
        var majorID = $('#MajorID :selected').attr("value");

        var subjectUrl = '@Url.Action("GetSubjects")/' + majorID;
        var classUrl = '@Url.Action("GetClasses")/' + majorID;

        $.getJSON(subjectUrl, function (subjects) {
            var html = "";
            $.each(subjects, function (index, subject) {
                html += ('<option value="' + subject.id + '" >' + subject.name + '</option>');
            });
            $("#SubjectID").html(html);
        });

        $.getJSON(classUrl, function (classes) {
            var html = "";
            $.each(classes, function (index, item_class) {
                html += ('<option value="' + item_class.id + '" >' + item_class.name + '</option>');
            });
            $("#ClassID").html(html);
        });
        //
    });   
</script>
