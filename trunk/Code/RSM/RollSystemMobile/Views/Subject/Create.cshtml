@model RollSystemMobile.Models.Subject
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h2>
    Create New Subject</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="table">
        <tr>
            <td style="width: 400px;">
                <div class="editor-label">
                    <b>Short Name</b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.ShortName, new { style = "width:70px" })
                    @Html.ValidationMessageFor(model => model.ShortName)
                </div>
                <span class="help-block">Acronyms of subject ( Example : OS, XML ...).</span>
                <div class="editor-label">
                    <b>Full Name</b>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.FullName)
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>
                <span class="help-block">Full Name of subject ( Example : Operating System ...).</span>
                <div class="editor-label">
                    <b>Subject Type</b>
                </div>
                <div class="editor-field">
                      @Html.DropDownList("TypeID", (SelectList)ViewBag.TypeID, new { style = "width: 200px;" })
                </div>
                <span class="help-block">Select subject type of subject</span>
            </td>
            <td>
                <div class="editor-label">
                    <b>Number Of Session</b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.NumberOfSession, new { style = "width:70px" })
                    @Html.ValidationMessageFor(model => model.NumberOfSession)
                </div>
                <span class="help-block">Number session of subject in a block.</span>
                <div class="editor-label">
                    <b>Number of slot</b>
                </div>
                <div class="editor-field">
                    @Html.DropDownList("NumberOfSlot", new List<SelectListItem> 
       { 
           new SelectListItem { Text = "1", Value = "1" }, 
           new SelectListItem { Text = "2", Value = "2" },
       }, new { style = "width: 70px;" })
                    @Html.ValidationMessageFor(model => model.NumberOfSlot)
                </div>
                <span class="help-block">Number slot of subject in day.</span>
                  <div class="editor-label">
                    <b>Majors</b>
                </div>
                <div class="editor-field">
                    @Html.DropDownList("MajorID", (SelectList)ViewBag.MajorID, new { multiple = "", style = "width: 200px;" })
                </div>
                <span class="help-block">Select type of the majors for subject</span>
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Create" class="btn btn-primary" />
    </p>
}
<p style="font-size:20px;">
    @Html.ActionLink("Back to List", "Index")
</p>
<script>
@{
    String majorIDs = "";
    if (ViewBag.SelectedIDs != null)
    {
        foreach (var Major in (List<int>)ViewBag.SelectedIDs)
        {
            majorIDs += Major + ",";
        }
    }
}

    $('#MajorID').val([@majorIDs]).select2();
</script>
