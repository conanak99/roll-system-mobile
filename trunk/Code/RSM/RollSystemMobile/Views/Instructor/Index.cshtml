@model RollSystemMobile.Models.ViewModels.InstructorViewModel
@{
    ViewBag.Title = "Current Roll Call";
}

@section ExtraHead 
{
    <style>
        dl.dl-horizontal
        {
            margin-top: -3px;
        }
        
        .dl-horizontal dt
        {
            width: 120px;
        }
        
        .dl-horizontal dd
        {
            margin-left: 140px;
        }
        
        .input-prepend .add-on:first-child
        {
            border-radius: 0;
        }
    </style>
}


<ul class="breadcrumb">
    <li><a href="@Url.Action("Index_Home")" class="glyphicons home"><i></i>Home</a></li>
    <li class="divider"></li>
    <li>Current Roll Call</li>
</ul>
<div class="separator bottom">
</div>
<div class="innerLR">
    <div class="row-fluid">
        <div class="span5">
            <div class="widget">
                <div class="widget-head">
                    <h3 class="heading glyphicons notes">
                        <i></i>Current Roll Call</h3>
                </div>
                <div class="widget-body">
                    @if (Model.CurrentRollCall != null)
                    {
                        <dl class="dl-horizontal">
                            <dt>Roll Call</dt>
                            <dd>@Model.CurrentRollCall.RollCallID</dd>
                            <dt>Subject</dt>
                            <dd>@Model.CurrentRollCall.Subject.ShortName</dd>
                            <dt>Instructor</dt>
                            <dd>@Model.AuthorizedInstructor.Fullname</dd>
                            <dt>Class</dt>
                            <dd>@Model.CurrentRollCall.Class.ClassName</dd>
                            <dt>Date</dt>
                            <dd>
                                From @Html.FormatDate(@Model.CurrentRollCall.BeginDate) to @Html.FormatDate(@Model.CurrentRollCall.EndDate)</dd>
                            <dt>Time</dt>
                            <dd>@Html.FormatTime(@Model.CurrentRollCall.StartTime) - @Html.FormatTime(@Model.CurrentRollCall.EndTime)</dd>
                            <dt class="margin-top-12">Check<br />
                                Attendance<br />
                                using image</dt>
                            <dd style="margin-top: 8px;">
                                @using (Html.BeginForm("CheckAttendanceAuto", "Instructor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <input type="hidden" name="RollCallID" value="@Model.CurrentRollCall.RollCallID" />
                                    <input type="file" id="files" name="ImageFiles" accept="image/*" multiple />
                                    <button class="btn btn-primary" id="btnUpload">
                                        Upload</button>
                                }
                            </dd>
                        </dl>
                    }
                    else
                    {
                        <h3>
                            You aren't teaching any class at present.</h3>
                    }
                </div>
            </div>
            </div>

@if (Model.CurrentRollCall !=null)
{
            <div class="span7">
                <div class="widget">
                    <div class="widget-head">
                        <h3 class="heading glyphicons user">
                            <i></i>Student List</h3>
                    </div>
                    <div class="widget-body">
                        @if (Model.CurrentAttendanceLog == null)
                        { 
                            <table class="table table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-right">
                                            No
                                        </th>
                                        <th>
                                            Student ID
                                        </th>
                                        <th>
                                            Student Name
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int index = 1;}
                                    @foreach (var Student in Model.CurrentRollCall.Students)
                                    {
                                        <tr>
                                            <td class="text-right">
                                                @index
                                            </td>
                                            <td>
                                                @Student.StudentCode
                                            </td>
                                            <td>
                                                @Student.FullName
                                            </td>
                                            <td>
                                                Uncheck
                                            </td>
                                        </tr>
                                        { index++; }
                                    }
                                    <tr>
                                        <td colspan="4" class="text-right">
                                            <strong>Please upload image to check attendance.</strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                        else
                        {
                            using (Html.BeginForm("CheckAttendanceManual", "Instructor", FormMethod.Post))
                            {
                            <input type="hidden" name="Username" value="@User.Identity.Name" />
                            <input type="hidden" name="RollCallID" value="@Model.CurrentRollCall.RollCallID" />
                            <input type="hidden" name="Date" value="@DateTime.Today" />
                            <table class="table table-striped table-condensed">
                                <!-- Tao form check attendace dua tren log hien tai -->
                                <thead>
                                    <tr>
                                        <th class="text-right">
                                            No
                                        </th>
                                        <th>
                                            Student Name
                                        </th>
                                        <th>
                                            Present
                                        </th>
                                        <th>
                                            Absent
                                        </th>
                                        <th class="text-center">
                                            Note
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int AttendIndex = 1;
                                      int CheckIndex = 0;
                                    }
                                    @foreach (var Student in Model.CurrentRollCall.Students)
                                    {
                                        <tr>
                                            <input type="hidden" name="AttendanceChecks.Index" value="@CheckIndex" />
                                            <input type="hidden" name="AttendanceChecks[@CheckIndex].StudentID" value="@Student.StudentID" />
                                            <td class="text-right">
                                                @AttendIndex
                                            </td>
                                            <td>
                                                @Student.FullName
                                            </td>
                                            @{ //Tim attendance cua log
                                        RollSystemMobile.Models.StudentAttendance Attendance = Model.CurrentAttendanceLog.StudentAttendances.
                                        FirstOrDefault(attend => attend.StudentID == Student.StudentID);
                                        bool falseCheck = Attendance == null || !Attendance.IsPresent;
                                            }
                                            <td class="text-center">
                                                <input type="radio" name="AttendanceChecks[@CheckIndex].IsPresent" value="true"
                                                                @(falseCheck ? "" : "checked") />
                                            </td>
                                            <td class="text-center">
                                                <input type="radio" name="AttendanceChecks[@CheckIndex].IsPresent" value="false"
                                                                @(falseCheck ? "checked" : "")/>
                                            </td>
                                            <td>
                                                <div class="input-prepend">
                                                    <span class="add-on note-prepend">@(Attendance == null || Attendance.Note == null || Attendance.Note.Split(':').Length < 2 ?
                                                    "" : @Attendance.Note.Split(':')[0])</span>
                                                    <input type="text" name="AttendanceChecks[@CheckIndex].Note" class="span6" 
                                                                value="@(Attendance == null || Attendance.Note == null || Attendance.Note.Split(':').Length < 2 ?
                                                                "" : @Attendance.Note.Split(':')[1].Trim())" />
                                                </div>
                                            </td>
                                        </tr>
                                        { AttendIndex++; CheckIndex++; }
                                    }
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td class="text-center">
                                            <input type="radio" name="totalRadio" id="PresentRadio" /><br />
                                            Present All
                                        </td>
                                        <td class="text-center">
                                            <input type="radio" name="totalRadio" id="AbsentRadio" /><br />
                                            Absent All
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="text-left">
                                            <strong style="font-size:120%">Present: @Model.CurrentAttendanceLog.StudentAttendances.Count(attend => attend.IsPresent == true)/@Model.CurrentRollCall.Students.Count</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <button class="btn btn-primary">
                                                Submit Attendance</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            }
                        }
                    </div>
                </div>
            </div>
}
            <script type="text/javascript">
                $('#PresentRadio').change(function () {
                    $("input:radio[value=true]").prop("checked", true);
                });
                $('#AbsentRadio').change(function () {
                    $("input:radio[value=false]").prop("checked", true);
                });

                $(":file").filestyle({ buttonText: "Select class images" });
            </script>
