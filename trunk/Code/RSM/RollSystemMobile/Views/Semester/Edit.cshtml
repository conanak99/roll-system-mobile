@model RollSystemMobile.Models.Semester
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
  
    @Html.HiddenFor(model => model.SemesterID)
    @Html.ValidationSummary(true)
    <table class="table">
        <tr>
            <td style="width: 350px;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.SemesterName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.SemesterName)
                    @Html.ValidationMessageFor(model => model.SemesterName)
                </div>
            </td>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.BeginDate)
                </div>
                <div class="editor-field">
                    <div class="input-append date" id="begindate" name="begindate" data-date="@ViewBag.Begindate" data-date-format="dd-mm-yyyy">
                        <input class="span2" name="BeginDate" id="BeginDate" style="width: 100px; margin-left: 10px;"
                            size="16" type="text" data-date-format="dd-mm-yyyy" readonly><span class="add-on"><i
                                class="icon-th"></i></span>
                    </div>
                </div>
            </td>
        </tr>
    </table>
    <p>
        <input class="btn btn-primary" type="submit" value="Save" />
    </p>
}
<p style="font-size: 20px;">
    @Html.ActionLink("Back to List", "Index")
</p>
<script>
    var nowTemp = new Date();
    var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);

    var checkin = $("#begindate").datepicker({
        onRender: function (date) {
            return date.valueOf() < now.valueOf() ? 'disabled' : '';
        }
    }).on('changeDate', function (ev) {
        checkin.hide();
    }).data('datepicker');
    checkin.setValue('@ViewBag.Begindate');

</script>