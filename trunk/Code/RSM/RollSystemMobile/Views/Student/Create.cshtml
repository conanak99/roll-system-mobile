@model RollSystemMobile.Models.Student
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h2>
    Create new student</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Student", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    
    <table class="table">
        <tr>
            <td>
                <div class="editor-label">
                    <b>Class : (<span style="color: Red;"> * </span>)</b>
                </div>
                <div class="editor-field">
                    @Html.DropDownList("ClassID", (SelectList)ViewBag.ClassID, String.Empty, new { style = "width: 130px;" })
                    @Html.ValidationMessageFor(model => model.ClassID)
                </div>
                <span style="height: 10px;" class="help-block">Select class for student.</span>
                <div class="editor-label">
                    <b>Full Name : (<span style="color: Red;"> * </span>)</b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.FullName)
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>
                <span style="height: 10px;" class="help-block">Type full name for student ( Nguyen Van
                    A ...).</span>
                <div class="editor-label">
                    <b>Birth date (<span style="color: Red;"> * </span>)</b>
                </div>
                <div class="editor-field">
                    <div class="input-append date" id="birthdate" data-date="10-10-2013" data-date-format="dd-mm-yyyy">
                        <input class="span2" name="birthdate" id="birthdate" style="width: 100px;" size="16"
                            type="text" data-date-format="dd-mm-yyyy" readonly><span class="add-on"><i class="icon-th"></i></span>
                    </div>
                </div>
                <span style="height: 10px;" class="help-block">Birth date of student ( 04-12-1991 ,
                    ...).</span>
                <div class="editor-label">
                    <b>Citizen ID : (<span style="color: Red;"> * </span>)</b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.CitizenID, new { style = "width: 130px;" })
                    @Html.ValidationMessageFor(model => model.CitizenID)
                </div>
                <span style="height: 10px;" class="help-block">CitizenID of student ( 191781592, ...).
                </span>
            </td>
            <td>
                <div class="editor-label">
                    <b>Address : </b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Address, new { style = "width: 250px;" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
                <span style="height: 10px;" class="help-block">Address of student.</span>
                <div class="editor-label">
                    <b>Email :</b>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Email, new { style = "width: 200px;" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <span style="height: 10px;" class="help-block">Email of student ( jm_huynq@yahoo.com.vn,
                    ...).</span>
                <div class="editor-label">
                    <b>Student Code : (<span style="color: Red;"> * </span>)</b>
                </div>
                <div class="editor-field" style="width: 100px;">
                    @Html.TextBoxFor(model => model.StudentCode, new { style = "width:150px;" })
                    @Html.ValidationMessageFor(model => model.StudentCode)
                </div>
                <span style="height: 10px;" class="help-block">Student code (SE60551, ...).</span>
            </td>
        </tr>
    </table>
    <p>
        <input style="margin-left: 20px;" type="submit" value="Create" id="submit" class="btn btn-primary" />
    </p>
}
<p style="font-size: 20px;">
    @Html.ActionLink("Back to List", "Index")
</p>
