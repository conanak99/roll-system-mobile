@model IEnumerable<RollSystemMobile.Models.RollCall>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Staff/_Layout.cshtml";
}
<h1>Roll Call List</h1>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="test">
    <tr>
        <th style="width:50px;">
            No.
        </th>
        <th style="width:50px;">
            Class
        </th>
        <th style="width:250px;">
            Subject
        </th>
        <th style="width:250px;">
            Date
        </th>
        <th style="width:200px;">
            Time
        </th>
        <th style="width:150px;">
            Student List
        </th>
        <th style="width:50px;">
            Detail
        </th>
        <th style="width:50px;">
            Delete
        </th>
    </tr>
    @{ int index = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:right;">
                @index
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.FullName)
            </td>
            <td>
                @item.BeginDate.ToShortDateString()-@item.EndDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)- @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.ActionLink("Show", "RollCallStudentList", new { RollCallID = item.RollCallID })
            </td>
            <td>
                @Html.ActionLink("Detail", "Edit", new { id = item.RollCallID })
            </td>
            <td>
                @Html.ActionLink("Detele", "Delete", new { id = item.RollCallID })
            </td>
        </tr>
        { index++; }
    }
</table>
